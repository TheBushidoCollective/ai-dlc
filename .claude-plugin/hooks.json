{
  "description": "AI-DLC hooks registered directly with Claude Code for structured responses",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "EnterPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/redirect-plan-mode.sh\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Task|Skill",
        "hooks": [
          {
            "type": "command",
            "command": "han hook wrap-subagent-context --context-command 'bash \"${CLAUDE_PLUGIN_ROOT}/hooks/subagent-context.sh\"'",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
