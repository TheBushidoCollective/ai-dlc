{
  "description": "AI-DLC hooks registered directly with Claude Code for structured responses",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "EnterPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_LOCAL_PLUGIN_DIR}/hooks/redirect-plan-mode.sh\"",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
